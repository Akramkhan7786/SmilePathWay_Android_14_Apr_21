<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayoutSuggestion"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:background="@drawable/dialog_layout"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:visibility="gone"
    android:paddingTop="@dimen/five_dp">

    <TextView
        android:id="@+id/txt_edgLife"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ten_dp"
        android:paddingBottom="@dimen/five_dp"
        android:text="Appointment Suggestions"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/eighteen_dp"
        android:visibility="visible" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSuggestionList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/five_dp"
        android:paddingRight="@dimen/five_dp"
        android:layout_marginTop="@dimen/five_dp"
        android:paddingBottom="20dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/ten_dp"
        android:layout_marginLeft="@dimen/five_dp"
        android:layout_marginRight="@dimen/five_dp">


        <TextView
            android:id="@+id/tv_booking"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/border_button"
            android:fontFamily="@font/regular"
            android:gravity="center"
            android:singleLine="true"
            android:maxLines="1"
            android:paddingTop="@dimen/ten_dp"
            android:paddingBottom="@dimen/ten_dp"
            android:text="for another appointment click here"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/twelve_dp"
            android:textStyle="bold"
            android:visibility="visible" />

    </LinearLayout>
</LinearLayout>