<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/five_dp"
    android:background="@drawable/lightgrey_border_button"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_multipal_practice"
        android:layout_width="match_parent"
        android:layout_height="@dimen/thirtfive_dp"
        android:gravity="center"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_practice_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left|center"
            android:paddingLeft="@dimen/ten_dp"
            android:text="First Practice Name"
            android:textColor="@color/grey_"
            android:textSize="12sp"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/img_arrow"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginRight="@dimen/ten_dp"
            android:padding="@dimen/ten_dp"
            android:src="@mipmap/right_arrow_grey"
            android:visibility="visible" />
    </LinearLayout>

</LinearLayout>

