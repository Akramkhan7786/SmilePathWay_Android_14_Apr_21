<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/rounded_tab_box_curve"
    android:paddingBottom="20dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Select Date &amp; Time"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tvDateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="From Date &amp; Time"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle" />

    <TextView
        android:id="@+id/tvDateSelection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:inputType="number"
        android:padding="5dp"
        android:text="From Date &amp; Time"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@+id/tvDateTime"
        app:layout_constraintTop_toBottomOf="@+id/tvDateTime" />

    <View
        android:id="@+id/viewMobile"
        android:layout_width="0dp"
        android:layout_height="0.9dp"
        android:layout_marginRight="10dp"
        android:background="#d3d3d3"
        app:layout_constraintLeft_toLeftOf="@+id/tvDateSelection"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDateSelection" />


    <TextView
        android:id="@+id/tvToDateTimeKey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="From Date &amp; Time"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewMobile" />

    <TextView
        android:id="@+id/tvToDateTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:inputType="number"
        android:padding="5dp"
        android:text="To Date &amp; Time"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@+id/tvToDateTimeKey"
        app:layout_constraintTop_toBottomOf="@+id/tvToDateTimeKey" />

    <View
        android:id="@+id/viewToDate"
        android:layout_width="0dp"
        android:layout_height="0.9dp"
        android:layout_marginRight="10dp"
        android:background="#d3d3d3"
        app:layout_constraintLeft_toLeftOf="@+id/tvToDateTime"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvToDateTime" />



    <Button
        android:id="@+id/btnOK"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/border_button"
        android:text="OK"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toBottomOf="@+id/viewToDate" />


    <Button
        android:id="@+id/btnCancel"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/border_button"
        android:text="Cancel"
        android:textAllCaps="false"
        app:layout_constraintRight_toLeftOf="@+id/btnOK"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toBottomOf="@+id/viewToDate" />


</androidx.constraintlayout.widget.ConstraintLayout>