<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLayoutSuggestion"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/dialog_layout"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/ten_sp"
    android:visibility="visible">


        <TextView
            android:id="@+id/txt_appoitment_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/ten_dp"
            android:paddingLeft="@dimen/ten_dp"
            android:paddingBottom="@dimen/ten_dp"
            android:text="Appointment #1"
            android:gravity="left"
            android:textColor="@color/smile_text_color"
            android:textSize="@dimen/seventeen_dp"
            android:textStyle="bold"
            android:visibility="visible" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvEstimator"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/five_dp"
        android:paddingBottom="@dimen/five_dp" />

</LinearLayout>