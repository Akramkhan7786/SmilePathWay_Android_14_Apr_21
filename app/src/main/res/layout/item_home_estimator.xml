<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvDashboard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/five_dp"
    android:elevation="@dimen/ten_sp"
    app:cardCornerRadius="10dp"
    app:cardElevation="@dimen/ten_sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/ten_sp">

        <TextView
            android:id="@+id/txt_appoitment_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Appointment #1"
            android:paddingLeft="@dimen/ten_dp"
            android:textColor="@color/smile_text_color"
            android:textSize="@dimen/seventeen_dp"
            android:textStyle="bold"
            android:visibility="visible" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvEstimator"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/five_dp"
            android:layout_marginBottom="@dimen/five_dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>